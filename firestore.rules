rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    
    // Helper: Validates if the user exists and has admin role
    function isAdmin() {
      let uid = request.auth.uid;
      let path = /databases/$(database)/documents/users/$(uid);
      return request.auth != null 
             && exists(path) 
             && get(path).data.role == 'admin';
    }

    // Helper: Checks if the requester owns the document
    function isOwner(userId) {
      return request.auth != null && request.auth.uid == userId;
    }

    // Companies: Public Read, Admin Write
    match /companies/{companyId} {
      allow read: if true;
      allow write: if isAdmin();
    }
    
    // Stores: Public Read, Admin Write
    match /stores/{storeId} {
      allow read: if true;
      allow write: if isAdmin();
    }
    
    // Coupons: Public Read, Admin Write
    match /coupons/{couponId} {
      allow read: if true;
      allow write: if isAdmin();
    }
    
    // Users:
    // Read: Owner OR Admin
    // Write: Owner OR Admin
    match /users/{userId} {
      allow read: if isOwner(userId) || isAdmin();
      allow write: if isOwner(userId) || isAdmin();
    }
    
    // Favorites: Owner only
    match /favorites/{userId}/coupons/{couponId} {
      allow read, write: if isOwner(userId);
    }
    
    // Cart: Owner only
    match /carts/{userId}/items/{couponId} {
      allow read, write: if isOwner(userId);
    }
  }
}
