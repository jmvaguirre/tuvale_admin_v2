rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    
    // ===== HELPERS =====
    
    // Validates if the user is an admin (checks admin_users collection)
    function isAdmin() {
      return request.auth != null 
             && exists(/databases/$(database)/documents/admin_users/$(request.auth.uid))
             && get(/databases/$(database)/documents/admin_users/$(request.auth.uid)).data.role == 'admin';
    }
    
    // Validates if the user is admin or employee (checks admin_users collection)
    function isAdminUser() {
      return request.auth != null 
             && exists(/databases/$(database)/documents/admin_users/$(request.auth.uid))
             && get(/databases/$(database)/documents/admin_users/$(request.auth.uid)).data.get('isActive', true) == true;
    }
    
    // Checks if the requester owns the document
    function isOwner(userId) {
      return request.auth != null && request.auth.uid == userId;
    }
    
    // Check if user is authenticated
    function isAuthenticated() {
      return request.auth != null;
    }
    
    // ===== PUBLIC COLLECTIONS (read for all) =====
    
    match /companies/{companyId} {
      allow read: if true;
      allow create: if isAuthenticated();
      allow update, delete: if isAdmin();
    }
    
    match /stores/{storeId} {
      allow read: if true;
      allow write: if isAdminUser();
    }
    
    match /coupons/{couponId} {
      allow read: if true;
      allow write: if isAdminUser();
    }
    
    // ===== MOBILE APP USERS =====
    
    match /users/{userId} {
      allow read: if isOwner(userId);
      allow create: if isAuthenticated() && isOwner(userId);
      allow update: if isOwner(userId);
      allow delete: if isOwner(userId);
    }
    
    match /favorites/{userId}/coupons/{couponId} {
      allow read, write: if isAuthenticated() && isOwner(userId);
    }
    
    match /favorites/{userId}/companies/{companyId} {
      allow read, write: if isAuthenticated() && isOwner(userId);
    }
    
    match /carts/{userId}/items/{couponId} {
      allow read, write: if isAuthenticated() && isOwner(userId);
    }
    
    match /purchase_history/{purchaseId} {
      allow read: if isAuthenticated() && resource.data.userId == request.auth.uid;
      allow create: if isAuthenticated() && request.resource.data.userId == request.auth.uid;
      allow read, write: if isAdminUser();
    }
    
    // ===== ADMIN APP USERS =====
    
    match /admin_users/{userId} {
      allow read: if isOwner(userId) || isAdmin();
      allow create: if isAuthenticated() && isOwner(userId);
      allow update: if isOwner(userId) || isAdmin();
      allow delete: if isAdmin();
    }
  }
}
